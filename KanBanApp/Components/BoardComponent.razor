@inherits FluxorComponent
@inject IState<KanbanState> State
@inject StateFacade Facade

@if (State.Value.Boards is not null)
{
    @foreach (var board in State.Value.Boards.Where(b => b.name == Board.name))
    {
        <p>@board.name</p>
        @if (board.columns != null)
        {
            foreach (var column in board.columns)
            {
                @column.name

                @if (column.tasks != null)
                {
                    foreach (var task in column.tasks)
                    {
                        <p>@task.description</p>
                        <p>@task.title</p>
                        <p>@task.status</p>

                        @if (task.subtasks != null)
                        {
                            foreach (var subTask in task.subtasks)
                            {
                                <p>@subTask.title</p>
                                <p>@subTask.isCompleted</p>
                            }
                        }
                    }
                }
            }
        }
    }
    <button @onclick="() => Facade.DeleteBoard(Board.name)">delete</button>

    <button @onclick="UpdateBoard">Update</button>

    @if (_isUpdateShowing)
    {
        <UpdateBoardComponent Board="Board" OnEdit="CloseUpdate" />
    }
}


@code {
    [Parameter]
    public Board? Board { get; set; }

    private bool _isUpdateShowing;

    private void UpdateBoard()
    {
        _isUpdateShowing = true;
    }

    private void CloseUpdate()
    {
        _isUpdateShowing = false;
    }

}
